<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation = "vertical"
    android:background="#1F1F1F">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="1585px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation = "vertical"
            android:paddingLeft="6dp"
            >

            <TableLayout
                android:layout_width="1050px"
                android:layout_height="140dp"
                android:layout_marginTop = "20dp"
                android:background="@drawable/my_shape_file">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="160px"
                    android:text = "Cable Push Day"
                    android:textStyle="bold"
                    android:textSize="120px"
                    android:textColor = "#000000">

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="78px"
                    android:text = "\@matthew_white"
                    android:textSize = "56px"
                    android:textColor = "#222222">

                </TextView>
                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    app:contentInsetStart="2dp"
                    app:contentInsetEnd="240dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        <ImageView
                            android:layout_width="60px"
                            android:layout_height="match_parent"
                            android:src="@drawable/like_icon_gold"
                            android:layout_marginRight="10dp">

                        </ImageView>
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:text = "17"
                            android:textSize = "25dp"
                            android:textColor = "#CEB888">

                        </TextView>
                        <ImageView
                            android:layout_width="60px"
                            android:layout_height="match_parent"
                            android:src="@drawable/comment_icon_gold"
                            android:layout_marginRight="10dp">

                        </ImageView>
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:text = "4"
                            android:textSize = "25dp"
                            android:textColor = "#CEB888">

                        </TextView>


                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>
            </TableLayout>


        </LinearLayout>
    </ScrollView>


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="150px"
        app:contentInsetStart="2dp"
        app:contentInsetEnd="2dp"
        android:background="#8D7223">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:src="@drawable/home_icon"
                android:backgroundTint="#CEB888">

            </ImageButton>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:src="@drawable/brain_icon"
                android:backgroundTint="#CEB888">

            </ImageButton>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:src="@drawable/post_icon"
                android:backgroundTint="#CEB888">

            </ImageButton>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:src="@drawable/saved_icon"
                android:backgroundTint="#CEB888">

            </ImageButton>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:src="@drawable/profile_icon"
                android:backgroundTint="#CEB888">

            </ImageButton>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
</LinearLayout>