<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    android:orientation="vertical"
    tools:context=".Profile">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/gradient_background"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="125dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:src="@drawable/sergioprofilepic" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text=" @sergio_he"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            app:cardElevation="40dp"
            app:cardBackgroundColor="@color/light_gold">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/num_of_posts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginTop="1dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="POSTS"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/num_of_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginTop="1dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LIKES"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="350dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15px">


            <TableLayout
                android:layout_width="1050px"
                android:layout_height="140dp"
                android:layout_marginTop = "20dp"
                android:background="@drawable/my_shape_file">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="160px"
                    android:text = "Arm Workout"
                    android:textStyle="bold"
                    android:textSize="120px"
                    android:textColor = "#000000">

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="78px"
                    android:text = "\@sergio_he"
                    android:textSize = "56px"
                    android:textColor = "#222222">

                </TextView>
                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    app:contentInsetStart="2dp"
                    app:contentInsetEnd="240dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        <ImageView
                            android:layout_width="60px"
                            android:layout_height="match_parent"
                            android:src="@drawable/like_icon_gold"
                            android:layout_marginRight="10dp">

                        </ImageView>
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:text = "3"
                            android:textSize = "25dp"
                            android:textColor = "#CEB888">

                        </TextView>
                        <ImageView
                            android:layout_width="60px"
                            android:layout_height="match_parent"
                            android:src="@drawable/comment_icon_gold"
                            android:layout_marginRight="10dp">

                        </ImageView>
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:text = "4"
                            android:textSize = "25dp"
                            android:textColor = "#CEB888">

                        </TextView>

                    </LinearLayout>

                </androidx.appcompat.widget.Toolbar>

            </TableLayout>

            <TableLayout
                android:layout_width="1050px"
                android:layout_height="140dp"
                android:layout_marginTop = "20dp"
                android:background="@drawable/my_shape_file">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="160px"
                    android:text = "Leg Day"
                    android:textStyle="bold"
                    android:textSize="120px"
                    android:textColor = "#000000">

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="78px"
                    android:text = "\@sergio_he"
                    android:textSize = "56px"
                    android:textColor = "#222222">

                </TextView>
                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    app:contentInsetStart="2dp"
                    app:contentInsetEnd="240dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <ImageView
                            android:layout_width="60px"
                            android:layout_height="match_parent"
                            android:src="@drawable/like_icon_gold"
                            android:layout_marginRight="10dp">

                        </ImageView>
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:text = "1"
                            android:textSize = "25dp"
                            android:textColor = "#CEB888">

                        </TextView>

                        <ImageView
                            android:layout_width="60px"
                            android:layout_height="match_parent"
                            android:src="@drawable/comment_icon_gold"
                            android:layout_marginRight="10dp">

                        </ImageView>

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:text = "2"
                            android:textSize = "25dp"
                            android:textColor = "#CEB888">

                        </TextView>

                    </LinearLayout>

                </androidx.appcompat.widget.Toolbar>

            </TableLayout>


        </LinearLayout>

    </ScrollView>

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="150px"
        app:contentInsetStart="2dp"
        app:contentInsetEnd="2dp"
        android:background="#8D7223">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageButton
                android:id="@+id/workoutFeed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#CEB888"
                android:clickable="true"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                android:src="@drawable/home_icon">

            </ImageButton>
            <ImageButton
                android:id="@+id/mentalHealthFeed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                android:src="@drawable/brain_icon"
                android:backgroundTint="#CEB888">

            </ImageButton>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:src="@drawable/post_icon"
                android:backgroundTint="#CEB888">

            </ImageButton>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:src="@drawable/saved_icon"
                android:backgroundTint="#CEB888">

            </ImageButton>
            <ImageButton
                android:id="@+id/profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                android:src="@drawable/profile_icon"
                android:backgroundTint="#CEB888">

            </ImageButton>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

</LinearLayout>